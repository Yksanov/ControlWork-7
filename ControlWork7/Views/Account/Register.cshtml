@model ControlWork7.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
<h4 class="text-center">Регистрация</h4>
<div class="row">
    <div class="card border-2">
        <div class="card-body d-flex justify-content-center">
            <div class="col-md-4">
                <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <div>
                            <label asp-for="FirstName" class="form-label">Введите Имя</label><br/>
                            <input type="text" asp-for="FirstName" class="form-control"/>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="LastName" class="form-label">Введите Фамилия</label><br/>
                            <input type="text" asp-for="LastName" class="form-control"/>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Email" class="form-label">Введите Email</label><br/>
                            <input type="email" asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="PhoneNumber " class="form-label">Введите Телефон</label><br/>
                            <input type="text" asp-for="PhoneNumber" class="form-control"/>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Password" class="form-label">Введите пароль</label><br/>
                            <input type="password" asp-for="Password" class="form-control"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label><br/>
                            <input type="password" asp-for="ConfirmPassword" class="form-control"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input type="submit" value="Регистрация" class="btn btn-outline-primary"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>