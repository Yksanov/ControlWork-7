@model ControlWork7.ViewModels.LoginViewModel
@{
    ViewBag.Title = "login";
}

<h4 class="text-center">Вход на сайт</h4>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card border-2 border-primary">
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div>
                        <div class="form-group py-3">
                            <label asp-for="Email" class="form-label">Введите Email</label>
                            <input type="email" asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Введите пароль</label>
                            <input asp-for="Password" class="form-control"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group py-3 text-center">
                            <input type="submit" value="Войти" class="btn btn-outline-primary px-5"/>
                        </div>
                    </div>
                </form>
                <div class="card-footer text-center">
                    <a asp-action="Register" asp-controller="Account"><button class="btn btn-outline-primary">Регистрация</button></a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}